<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    tools:context=".Home_Page">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#FFFFFF"
        android:elevation="8.97dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10.5dp"
            android:layout_marginEnd="16dp">

            <View
                android:id="@+id/logo_horizontal"
                android:layout_width="107dp"
                android:layout_height="32dp"
                android:background="@drawable/logo_horizontal" />

            <TextView
                android:id="@+id/test_qti"
                android:layout_width="61dp"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6.5dp"
                android:layout_marginBottom="6.5dp"
                android:fontFamily="@font/red_hat_display"
                android:text="@string/test_qti_home"
                android:textColor="#06122B"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/top"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/profil">

            <RelativeLayout
                android:id="@+id/avatar_nama"
                android:layout_width="197dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp">

                <RelativeLayout
                    android:id="@+id/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp">

                    <com.example.testmobileqti.CircleAvatarUser
                        android:id="@+id/avatar_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

<!--                    <View-->
<!--                        android:id="@+id/avatar_user"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_alignParentStart="true"-->
<!--                        android:layout_alignParentLeft="true"-->
<!--                        android:layout_alignParentTop="true"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_alignParentBottom="true"-->
<!--                        android:background="@drawable/avatar_user" />-->

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/name_email"
                    android:layout_width="147dp"
                    android:layout_height="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/avatar">

                    <TextView
                        android:id="@+id/name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/red_hat_display"
                        android:gravity="top"
                        android:text="@string/name_user"
                        android:textColor="#06122B"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/email_user"
                        android:layout_width="147dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:alpha="0.6"
                        android:fontFamily="@font/red_hat_display"
                        android:gravity="top"
                        android:text="@string/name_email_user"
                        android:textColor="#06122B"
                        android:textSize="12sp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_logout"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/button_login">

                <TextView
                    android:id="@+id/text_logout"
                    android:layout_width="41dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/red_hat_display"
                    android:gravity="center_horizontal|top"
                    android:text="@string/logout_home"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_navi"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:clipToOutline="true"
            android:elevation="8.97dp">

            <RelativeLayout
                android:id="@+id/button_home"
                android:layout_width="66dp"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8.5dp">

                <RelativeLayout
                    android:id="@+id/home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:clipToOutline="true">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/mdi_home_variant" />

                </RelativeLayout>

                <TextView
                    android:layout_width="31dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="17.5dp"
                    android:layout_marginEnd="17.5dp"
                    android:fontFamily="@font/red_hat_display"
                    android:gravity="center_horizontal|top"
                    android:text="@string/home"
                    android:textColor="#2B8FEB"
                    android:textSize="11sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_asset"
                android:layout_width="66dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8.5dp"
                android:layout_marginEnd="24dp">

                <RelativeLayout
                    android:id="@+id/asset"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:clipToOutline="true">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/mdi_archive_black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="17.5dp"
                    android:layout_marginEnd="17.5dp"
                    android:fontFamily="@font/red_hat_display"
                    android:gravity="center_horizontal|top"
                    android:text="@string/asset"
                    android:textColor="#06122B"
                    android:textSize="11sp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_trig"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/bottom_navi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_trigger">

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="11dp"
            android:background="@drawable/plus_trigger" />

    </RelativeLayout>

</RelativeLayout>
