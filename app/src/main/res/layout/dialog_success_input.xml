<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_succ"
    android:layout_width="286dp"
    android:layout_height="185dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/dialog_success"
    android:layout_alignParentRight="true"
    android:layout_gravity="center"
    android:elevation="6.75dp">

    <RelativeLayout
        android:id="@+id/images_success"
        android:layout_width="266dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_success"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title_dialog_success"
        android:layout_width="266dp"
        android:layout_height="30dp"
        android:layout_below="@+id/images_success"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/red_hat_display_medium"
        android:textSize="16sp"
        android:textColor="#06122B"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/title_dialog_success" />

    <TextView
        android:id="@+id/content_dialog_success"
        android:layout_width="266dp"
        android:layout_height="46dp"
        android:layout_below="@+id/title_dialog_success"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/red_hat_display_medium"
        android:textSize="14sp"
        android:textColor="#06122B"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/content_dialog_success" />

</RelativeLayout>