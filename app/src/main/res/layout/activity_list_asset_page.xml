<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asset_onboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#F9F9F9">

    <RelativeLayout
        android:id="@+id/list_asset_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/list_asset_title"
            android:layout_width="92dp"
            android:layout_height="24dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-2sp"
            android:textColor="#06122B"
            android:textSize="20sp"
            android:fontFamily="@font/red_hat_display_medium"
            android:text="@string/list_asset" />

        <RelativeLayout
            android:id="@+id/form_search"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/list_asset_title"
            android:background="@drawable/form_input"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/search_bar"
                android:layout_width="81dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/red_hat_display"
                android:gravity="top"
                android:lineSpacingExtra="1sp"
                android:text="@string/search_asset"
                android:textColor="#818896"
                android:textSize="14sp"
                android:translationY="-0.74sp" />

            <RelativeLayout
                android:id="@+id/tools_search"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/search"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:clipToOutline="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_asset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/form_search"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/list_asset">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:id="@+id/list_data"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/list_scroll">

                    <RelativeLayout
                        android:id="@+id/title_asset"
                        android:layout_width="101dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" >

                        <TextView
                            android:id="@+id/asset_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_medium"
                            android:gravity="top"
                            android:text="@string/name_asset"
                            android:textColor="#818896"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/produk_asset"
                            android:layout_width="101dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:gravity="top"
                            android:textSize="16sp"
                            android:textColor="#06122B"
                            android:fontFamily="@font/red_hat_display_medium"
                            android:lineSpacingExtra="-1sp"
                            android:text="@string/product_asset" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_edit_asset"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/button_trigger" >

                        <RelativeLayout
                            android:id="@+id/edit_btn"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:clipToOutline="true"
                            android:layout_margin="8dp"
                            android:background="@drawable/edit_button"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>